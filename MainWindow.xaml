<Window x:Class="npl_training_demo_cs.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NPL Sentiment Trainer" Height="300" Width="400">

    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

            <!-- Input for emotion -->
            <TextBox x:Name="emotionTextBox"
                     Width="300"
                     Height="25"
                     Margin="0,0,0,10"
                     HorizontalAlignment="Center"
                     VerticalContentAlignment="Center"
                     FontSize="14"
                     />

            <!-- Button to analyze emotion -->
            <Button x:Name="analyzeButton"
                    Content="Analyze Sentiment"
                    Width="300"
                    Height="30"
                    Click="AnalyzeSentiment"
                    Background="LightGray"
                    Margin="0,0,0,10"
                    />

            <!-- Result display -->
            <TextBlock x:Name="resultTextBlock"
                       Width="300"
                       Height="Auto"
                       Text="Enter your emotion above"
                       TextWrapping="Wrap"
                       FontSize="13"
                       Margin="0,10,0,0"
                       TextAlignment="Center"
                       />
        </StackPanel>
    </Grid>
</Window>
